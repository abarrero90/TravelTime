              <% else %>
                  <%= link_to 'Add Photo', adding_photo_path(@user) %>
                  <div class = 'galery'>
                    <% cache ['photos', Photo.latest] do %>
                        <% @photos.each do |photo| %>
                            <% if @user.id == photo.user_id %>
                                <%= image_tag photo.avatar_file_name %>
                            <% end %>
                        <% end %>
                    <% end %>
                  </div>
              <% end %>
            </div>
