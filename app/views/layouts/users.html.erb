<!DOCTYPE html>
<html>
<script>
  $('#jquery').click(function(){
      $(this).append(" <b>Appended text</b>.");
  });
</script>

<head>
  <title><%= current_user.name %></title>
  <%= stylesheet_link_tag    'users', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'bootstrap', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <p class="navbar-text">Travel Time</p>
  <div class="container-fluid">
    <%= form_tag(user_search_path, :method => 'get', class: 'navbar-form', id: 'search-form') do %>
        <div class="input-append">
          <%= text_field_tag :search, params[:search], class: 'span2', placeholder: 'Search Users' %>
          <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
               of using a Rails form helper -->
          <button class="btn" type="submit"><i class="icon-search"></i></button>
        </div>
    <% end %>
  </div><!-- /.container-fluid -->
</nav>
                                                                          <!-- onclick:'alert("Inline Javscript")' -->

<div class="user-header">

  <span class='user-name'><%= current_user.name  %></span>
  <div id='avatar-img'>
  <%= image_tag current_user.avatar_file_name , :class => 'user-img_style', :id => 'jquery'%>

  </div>
  <!--<p><a href="#" onclick="document.getElementById('hiddenForm').style.display = 'block'; return false;">Add a message</a></p>-->
  <form action="#" id="hiddenForm" style="display: none;">
    <textarea cols="50" rows="10"></textarea><br />
    <input type="submit" value="send a message" />
  </form>
  <div id='links'>
      <div class='blank-space'></div>
      <%= link_to 'Menu', user_path(current_user.id), class:'css3button'%>
      <div class='blank-space'></div>
      <%= link_to 'Go to Gallery', loading_gallery_path, class:'css3button', :id => 'show-add' %>
      <div class='blank-space'></div>
      <%= link_to 'Go to Maps', loading_maps_path, class:'css3button'%>
      <div class='blank-space'></div>
  </div>
</div>

<div id='user-container' class='user-container' >
<%= yield %>
</div>

</body>
</html>

